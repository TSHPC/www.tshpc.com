<div class='mf-container text'>

<p class="notice info"><%= notice %></p>

<h1>The list of the events organized by TSHPC lately</h1>

<table>
  <% @events.each do |event| %>
  <tr class="<%= cycle('list-line-odd', 'list-line-even')%>" >
    <td class='list-description'>
      <dl>
        <dt><%= event.name %></dt>
        <dd><%= truncate(strip_tags(event.description), length: 300) %></dd>
      </dl>
    </td>
    <td>
      <%= event.location %>
    </td>
    <td>
      <%= event.starts_at.strftime("%m/%d/%Y") %>
    </td>
    <td>
      <%= event.ends_at.strftime("%m/%d/%Y") %>
    </td>
    <td class='list-actions'>
      <%= link_to 'Show', event %>
      <%= link_to 'Edit', edit_event_path(event) %>
      <%= link_to 'Destroy', event, method: :delete, 
                                    data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
  <% end %>
</table>

<br>

<%= link_to 'New event', new_event_path, class: 'btn-stl-2' %>

</div>